

<div class="panel panel default devise-form">
  <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
      <h2 class='text-center'>Войти</h2>

      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, wrapper: :horizontal_boolean, as: :boolean %>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= f.button :submit, "Войти" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
