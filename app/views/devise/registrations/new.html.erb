<div class="panel panel-default devise-form">
  <div class="panel-body">
    <h2 class="text-center">Регистрация</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username, autofocus: true %>
        <%= f.input :email, required: true %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} символов минимум" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
        <%= f.input :weekly_mailing, wrapper: :horizontal_boolean %>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= f.button :submit, "Зарегистрироваться" %>
        </div>
      </div>
    <% end %>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <%= render "devise/shared/links" %>
        </div>
      </div>
  </div>
</div>
